<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dip"
        android:layout_marginTop="@dimen/a_3size"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/a_size"
            android:layout_marginRight="@dimen/a_size"
            android:orientation="vertical"
            android:paddingBottom="@dimen/a_4size">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="#333333"
                android:text="111111"
                android:layout_marginTop="@dimen/common_margin_20dp"
                android:textSize="@dimen/H2_ts"
                android:visibility="visible" />

            <TextView
                android:id="@+id/message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="111111"
                android:paddingBottom="@dimen/a_size"
                android:layout_marginTop="@dimen/common_margin_10dp"
                android:layout_marginRight="@dimen/common_margin_5dp"
                android:layout_marginLeft="@dimen/common_margin_5dp"
                android:textColor="#333333"
                android:textSize="@dimen/H3_ts" />

            <TextView
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="111111"
                android:layout_marginRight="@dimen/common_margin_5dp"
                android:layout_marginLeft="@dimen/common_margin_5dp"
                android:lineSpacingMultiplier="1.5"
                android:minHeight="@dimen/a_12size"
                android:textSize="@dimen/T1_ts" />

            <TextView
                android:id="@+id/message_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/common_margin_5dp"
                android:text="111111"
                android:layout_marginTop="@dimen/a_size"
                android:textSize="@dimen/T1_ts" />

        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="@dimen/A_8size"
            android:layout_height="@dimen/a_8size"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/a_4size"
            android:background="@drawable/policy_submit_bg"
            android:text="@string/get_immediately"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="@dimen/A_8size"
            android:layout_height="@dimen/a_8size"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/a_4size"
            android:background="@android:color/transparent"
            android:text="@string/not_tips"
            android:textColor="@color/common_titleText_color" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_pop_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/popup_ic_cancel" />

</RelativeLayout>